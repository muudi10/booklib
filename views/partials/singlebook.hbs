
{{#each bookId}}

<section class="main-display mt-5"> 
        <div class="row">
            <div class="col-3 book-display">
                <img src="./images/poduct_image.jpg" style="width:260px; border-radius: 5px; height:auto" alt="">
            </div>
            <div class="col-6">
                
                <h1>{{book_title}}</h1>
                <h3>By : {{book_author}}</h3>
                <h3>Condition: Book Condition </h3>
                <h4>Stock: count </h4>
                <h4>Reader Rating </h4>
                <a href="#" class="btn btn-info pl-5 pr-5">Reserve now</a>
            </div>
            <div class="col-3">
                <h2>Summary</h2>
                <p>{{book_summary}}</p>
                    <hr>
                    <h3>Book Description </h3>
                    {{book_description}}
                    <ul>
                        <li>Free shipping in Ireland</li>
                        <li>Supports the circular-economy</li>
                        <li>100% recyclable packaging</li>
                    </ul>
            </div>       
           </div>
 </section>



{{/each}}



